<!-- urls_index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Bootstrap CSS and other headers -->
  </head>
  <body>
    <!-- Include your header partial here -->
    <% include('./partials/_header') %>

    <main style="margin: 1em;">
      <h3>My URLs</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Short URL ID</th>
            <th scope="col">Long URL</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (let id in urls) { %>
            <tr>
              <td><%= id %></td>
              <td><%= urls[id] %></td>
              <td>
                <a href="/urls/<%= id %>/edit">Edit</a>
              </td>
              <td>
                <form method="POST" action="/urls/<%= id %>/delete">
                  <button type="submit">Delete</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </main>
    <!-- Bootstrap JS and other scripts -->
  </body>
</html>
